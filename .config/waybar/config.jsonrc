[
    {
        "layer": "top",
        "output": ["DP-1"],
        "height": 24,
        "modules-left": [
            "hyprland/workspaces", 
            "sway/mode",  
            "custom/media"
        ],
        "modules-center": ["sway/window"],
        "modules-right": ["bluetooth", "temperature", "cpu", "memory","network", "pulseaudio", "backlight", "keyboard-state", "tray", "hyprland/language", "clock"],
        // Modules configuration
        "hyprland/workspaces": {
            "format": "{name}: {icon}",
            "format-icons": {
                "1": "ÔÑ†",
                "2": "Ôâ®",
                "3": "ÔÑ°",
                "4": "ÔÜº",
                "5": "ÔÅµ",
                "active": "ÔÜí",
                "default": "ÔÑë"
            },
            "active-only": false
        },
        "hyprland/language": {
            "format": "{short}"
        },
        "bluetooth": {
            // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
            "format": "Ôäî {status}",
            "format-disabled": "", // an empty format will hide the module
            "format-connected": "Ôäî {num_connections} connected",
            "tooltip-format": "{controller_alias}\t{controller_address}",
            "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
            "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}"
        },
        "keyboard-state": {
            "numlock": true,
            "capslock": true,
            "format": "{name} {icon}",
            "format-icons": {
                "locked": "ÔÄ£",
                "unlocked": "ÔÇú"
            }
        },
        "sway/mode": {
            "format": "<span style=\"italic\">{}</span>"
        },
        "sway/scratchpad": {
            "format": "{icon} {count}",
            "show-empty": false,
            "format-icons": ["", "Ôãí"],
            "tooltip": true,
            "tooltip-format": "{app}: {title}"
        },
        "tray": {
            // "icon-size": 21,
            "spacing": 10
        },
        "clock": {
            // "timezone": "America/New_York",
            "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
            //"format-alt": "{:%Y-%m-%d}"
            "format": "{:L%Y-%m-%d<small>[%a]</small> <tt><small>%p</small></tt>%I:%M}"
            //"format": "{:%Y-%m-%d %H:%M}"
        },
        "cpu": {
            "format": "Ôãõ {usage}%",
        },
        "memory": {
            "format": "ÔÉâ {}%"
        },
        "temperature": {
            "thermal-zone": 2,
            "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
            "critical-threshold": 80,
            "format-critical": "{icon} {temperatureC}¬∞C",
            "format": "{icon} {temperatureC}¬∞C",
            "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
        },
        "backlight": {
            // "device": "acpi_video1",
            "format": "{icon} {percent}%",
            "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
        },
        "network": {
            // "interface": "wlp2*", // (Optional) To force the use of this interface
            "format-wifi": "{essid} up:{{bandwidthUpBits}} down: {{bandwidthDownBits}} /  Ôá´",
            "format-ethernet": "Ôûñ {ifname} up:{bandwidthUpBits} / down:{bandwidthDownBits}",
            "tooltip-format": "Ôûñ {ifname} via {gwaddr}",
            "format-linked": "Ôûñ {ifname} (No IP)",
            "format-disconnected": "Disconnected ‚ö† {ifname}",
            "format-alt": "Ôûñ {ifname}: {ipaddr}/{cidr}",
            "interval": 2
        },
        "custom/media": {
            "format": "{icon} {}",
            "return-type": "json",
            "max-length": 40,
            "format-icons": {
                "spotify": "ÔÜº",
                "default": "üéú"
            },
            "escape": true,
            "on-click-right": "pavucontrol",
            "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        },
        "pulseaudio": {
            "on-click-right": "pavucontrol"
        },
        "wlr/taskbar": {
            "format": "{icon}",
            "icon-size": 14,
            "icon-theme": "Numix-Circle",
            "tooltip-format": "{title}",
            "on-click": "activate",
            "on-click-middle": "close",
            "ignore-list": [
                "Alacritty"
            ],
            "app_ids-mapping": {
                "firefoxdeveloperedition": "firefox-developer-edition"
            },
            "all-outputs": false
        }
    }
